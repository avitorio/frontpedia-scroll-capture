{
  "manifest_version": 3,
  "name": "Frontpedia Scroll Capture",
  "version": "1.0",
  "description": "Capture distances and smoothly scroll on Enter key press.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
